@model Domain.Models.Poll

@{
    ViewData["Title"] = "Create Poll";
}

<h2>Create a New Poll</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option1Text" class="control-label">Option 1</label>
        <input asp-for="Option1Text" class="form-control" />
        <span asp-validation-for="Option1Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option2Text" class="control-label">Option 2</label>
        <input asp-for="Option2Text" class="form-control" />
        <span asp-validation-for="Option2Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option3Text" class="control-label">Option 3</label>
        <input asp-for="Option3Text" class="form-control" />
        <span asp-validation-for="Option3Text" class="text-danger"></span>
    </div>

    @* Hidden fields for votes and DateCreated (system-managed) *@
    <input asp-for="Option1VotesCount" type="hidden" value="0" />
    <input asp-for="Option2VotesCount" type="hidden" value="0" />
    <input asp-for="Option3VotesCount" type="hidden" value="0" />
    <input asp-for="DateCreated" type="hidden" value="@DateTime.Now" />

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
